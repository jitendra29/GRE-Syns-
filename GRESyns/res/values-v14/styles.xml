<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="android:windowBackground">@android:color/white</item>
		<item name="android:divider">@color/textBlue</item>
        <item name="android:dividerHeight">1dp</item>  
        <item name="android:buttonStyle">@style/buttonBackground</item>
	</style>
	
        <style name="buttonBackground" >
        <item name="android:background">@color/dark</item>
        <item name="android:textColor">@android:color/white</item>        
        <item name="android:padding">10sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
 
    <style name="cancelBackground" >
        <item name="android:background">@color/light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>        
        <item name="android:padding">10sp</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" >
        <item name="android:windowBackground">@drawable/background</item>
	</style>    
	
</resources>