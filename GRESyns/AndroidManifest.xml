<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.aakashlabs.gresyns"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.aakashlabs.gresyns.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.Box"
            android:label="@string/title_activity_box" >
        </activity>

        <service
            android:name="org.aakashlabs.gresyns.DBManager"
            android:enabled="false"
            android:exported="false" >
        </service>
        <service
            android:name="org.aakashlabs.gresyns.DBInit"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="org.aakashlabs.gresyns.DisplayActivity"
            android:label="@string/title_activity_display" >
            <intent-filter>
                <action android:name="org.aakashlabs.gresyns.DISPLAYACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.ViewWordList"
            android:label="@string/title_activity_view_word_list" >
            <intent-filter>
                <action android:name="org.aakashlabs.gresyns.VIEWWORDLIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.GroupDisplay"
            android:label="@string/title_activity_group_display" >
            <intent-filter>
                <action android:name="org.aakashlabs.gresyns.GROUPDISPLAY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.GroupDisplayConfirm"
            android:label="@string/title_activity_group_display_confirm" >
            <intent-filter>
                <action android:name="org.aakashlabs.gresyns.GROUPDISPLAYCONFIRM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.aakashlabs.gresyns.AddToGroup"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.NewGroup"
            android:label="@string/title_activity_new_group" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.About"
            android:label="@string/title_activity_about"
            android:theme="@style/SplashTheme" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.Test"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.TestScore"
            android:label="@string/title_activity_test_score" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.BoxList"
            android:label="@string/title_activity_box_list" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.GroupList"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name="org.aakashlabs.gresyns.FavouritesList"
            android:label="@string/title_activity_favourites" >
        </activity>
    </application>

</manifest>